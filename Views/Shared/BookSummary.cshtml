
@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">



    <div class="row">
        <div class="col-3 text-center font-weight-bold p-1">
            <h4>@Model.Title</h4>
        </div>
        <div class="col-6 align-items-center text-secondary">
            <ul>
                <li>Author: @Model.Author</li>
                <li>Category: @Model.Category</li>
                <li>Publisher: @Model.Publisher</li>
                <li>ISBN: @Model.Isbn</li>
                <li>Classification: @Model.Classification</li>
                <li>Page Count: @Model.PageCount Pages</li>
                    
            </ul>
        </div>
        <div class="col-3">
            <span class="badge bg-light" style="float:right">
                Price: $@Model.Price
            </span>
        </div>
    </div>
    <form method="post" asp-page="/Buy">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-lg float-right">Buy</button>
        </span>

    </form>
</div>