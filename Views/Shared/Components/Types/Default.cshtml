@{
}
@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>
    <br />
    <div class="row">
        <a class="text-center font-weight-bold mt-3 mb-2">Categories</a>
    </div>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookType="@c" asp-route-pageNum="1"
            class="btn @(ViewBag.SelectedType == c ? "btn-success" : "btn-outline-secondary")">@c</a>
    }

</div>